                                                                                          <option value="testnet">Testnet</option>
                                                                                                </select>
                                                                                                    </div>

                                                                                                        <!-- Calculator -->
                                                                                                            <div class="bg-gray-800 rounded-2xl p-6 shadow-lg w-full max-w-md">
                                                                                                                  <div class="flex justify-center space-x-6 mb-4">
