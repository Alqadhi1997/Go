                                                                                                                                                    <button class="currency-btn" data-symbol="USDT">
                                                                                                                                                              <img src="/img/usdt.png" alt="USDT" class="h-8 inline"> USDT
                                                                                                                                                                      </button>
                                                                                                                                                                              <button class="currency-btn" data-symbol="USDC">
